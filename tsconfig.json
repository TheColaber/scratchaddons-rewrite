{
  "compilerOptions": {
    "types": ["@types/chrome"],
    "target": "ES2022",
    "lib": ["DOM", "es2019", "dom.iterable"],
    "module": "es2022",
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "#addons": ["./types/virtuals/addons.d.ts"],
      "#popups": ["./types/virtuals/popups.d.ts"],
      "#popup-components": ["./types/virtuals/popup-components.d.ts"]
    }
  },
  "include": ["src/**/*", "src/*", "types/*"]
}
